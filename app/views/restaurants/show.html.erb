<h1> <%= @restaurant.name %></h1>
<ul>
  <li> Adress: <%= @restaurant.address %></li>
  <li>Phone Number: <%= @restaurant.phone_number %></li>
  <li>Category: <%= @restaurant.category %></li>
</ul>
<h3>Reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item">
    Rating : <%=  review.rating %>
    <p>
     Comment: <%= review.content %>
    </p>
  </li>
  <% end %>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant.id) %>
</ul>

<%= link_to "Return to list", restaurants_path %>
